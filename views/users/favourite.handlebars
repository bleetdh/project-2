{{#if user }}
  <h2>Username: {{ user.username }}, </h2>
  <div>
    <p>Favourite carparks: </p>
    <ul multiple>
      {{#each user.carparks as |carpark|}}
        <li>
          <h3>{{ carpark.name }}</h3>
          <p>{{ carpark.address }}</p>
          <form action="/{{ user.username }}" method="post" data-carpark="{{carparks.id}}">
            <button>Delete</button>
          </form>
        </li>
        {{else}}
          <li>no place</li>
      {{/each}}
    </ul>
  </div>
{{/if}}

{{#unless user }}
  <h2>No such user!</h2>
  <p> Please sign up with us! </p>
{{/unless}}
